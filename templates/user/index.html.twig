{% extends 'base.html.twig' %}

{% block title %}Main Page{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="container">
            <div class="text-center">
                <button type="button" class="btn gradient-custom-1 text-bg-white w-100 my-3 border-rounded"><a class="text-decoration-none text-dark" href="{{ path ('app_collection_create')}}">Create new Collection!</a></button>
            </div>
        </div>
    {% endif %}
    <div class="container">
        {% if collections %}
            <div class="row my-5 pb-5">
                {% for collection in collections %}
                    <div class="col-sm-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><a class="text-decoration-none text-dark" href="{{ path ('app_collection_show', {id:collection.id}) }}">{{ collection.name }}</a></h5>
                                <p class="card-text">{{ collection.description }}</p>

                                {% if app.user and app.user.email == collection.author.email %}                                    
                                    <div class="d-flex justify-content-between">
                                        <button class="btn btn-outline-warning me-2 w-100 "><a class="text-decoration-none text-dark" href="{{ path ('app_collection_update', {id:collection.id} )}}">Update</a></button>
                                        <button class="btn btn-outline-danger me-2 w-100 "><a class="text-decoration-none text-dark" href="{{ path ('app_collection_delete', {id:collection.id} )}}">Delete</a></button>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
